
<view class="page-body">
    <view style='background-color:#E61A1A;text-align: center;height: 100rpx;'>
      <text style='color:white;font-size:80rpx;'>{{total}}</text>
    </view>
    <view style='background-color:#E61A1A;text-align: center;height: 50rpx;'>
    <text style='color:white;font-size:30rpx;'>钱包总额</text>
    </view>

    <view style='display: flex;background-color:#E61A1A;text-align: center;height: 180rpx;'>

      <view style='width:375rpx;height: 100rpx;'>
        <text style='color:white;font-size:80rpx;'>{{income}}</text>
        <view style='width:375rpx;height: 60rpx;'>
          <text style='color:white;font-size:30rpx;'>当月总收入</text>
        </view>
      </view>

      <view style='width:375rpx;height: 100rpx;'>
        <text style='color:white;font-size:80rpx;'>{{enpend}}</text>
        <view style='width:375rpx;height: 60rpx;'>
          <text style='color:white;font-size:30rpx;'>当月总支出</text>
        </view>
      </view>

    </view>

    <view style='height:100rpx;padding-top:20rpx;padding-left:50rpx;'>
      <text style='color:black;font-size:35rpx;' bindtap='getdetail'>交易明细 >> </text>
    </view>


   


</view>

